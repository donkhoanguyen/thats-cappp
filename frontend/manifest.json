{
  "manifest_version": 3,
  "name": "WYS",
  "version": "1.0",
  "description": "Finds and lists key concepts from the current page in a side panel.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "microphone",
    "sidePanel",
    "offscreen"
  ],
  "host_permissions": [
    "ws://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": [
        "components/floating-button/floating-button.css",
        "components/popup/popup.css",
        "components/sidepanel/sidepanel.css"
      ],
      "type": "module"
    }
  ],
  "icons": {
    "16": "icons/pplx_logo.png",
    "48": "icons/pplx_logo.png",
    "128": "icons/pplx_logo.png"
  },
  "action": {
    "default_title": "Show Concepts"
  },
  "side_panel": {
    "default_path": "components/sidepanel/sidepanel.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/pplx_logo.png",
        "components/sidepanel/sidepanel.html",
        "components/sidepanel/sidepanel.css", 
        "components/sidepanel/sidepanel.js", 
        "components/popup/popup.html",
        "components/popup/popup.js",
        "components/popup/popup.css",         
        "components/floating-button/floating-button.js",
        "components/floating-button/floating-button.css",
        "offscreen.html",
        "offscreen.js",
        "mic_permission.html",
        "mic_permission.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}