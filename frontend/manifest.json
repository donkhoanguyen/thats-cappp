{
  "manifest_version": 3,
  "name": "WYS",
  "version": "0.1",
  "description": "Finds and lists key concepts from the current page in a side panel.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["sidepanel.css"]
    }
  ],
  "icons": {
    "16": "icons/pplx_logo.png",
    "48": "icons/pplx_logo.png",
    "128": "icons/pplx_logo.png"
  },
  "action": {
    "default_title": "Show Concepts"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/pplx_logo.png", "sidepanel.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
